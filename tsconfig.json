{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowJs": false,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/@/*": ["src/*"],
      "@build/*": ["build/*"],
      "/#/*": ["types/*"]
    },
    "types": ["node", "vite/client", "element-plus/global", "vite-plugin-svg-icons/client"],
    "typeRoots": ["./node_modules/@types/", "./types", "./node_modules/**/*.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
